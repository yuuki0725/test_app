<h2>スケジュール一覧</h2>

<% if flash.notice %>
    <p class="notice"><%= flash.notice %></p>
<% end %>
<% if flash.alert %>
    <p class="alert"><%= flash.alert %></p>
<% end %>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>タイトル</th>
            <th>開始日</th>
            <th>終了日</th>
            <th>終日</th>
            <th>スケジュール更新日時</th>
            <th>確認</th>
            <th>編集</th>
            <th>削除</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <tr>
                <td><%= user.id %></td>
                <td><%= user.title %></td>
                <td><%= user.start_day %></td>
                <td><%= user.end_day %></td>
                <td>
                    <% if user.all_day == true %>◯
                    <% end %>
                        <%# <% if user.all_day == true %>
                            <%# <td>◯</td> %>
                        <%# <% else user.all_day == false %>
                            <%# <td> </td> %>
                        <%#  <% end %> 
                </td>
                <td><%= user.updated_at.to_s(:datetime_jp) %></td>
                <td><%= link_to "確認", user %></td>
                <td><%= link_to "編集", [:edit, user] %></td>
                <td><%= link_to "削除", user, method: :delete, data: {confirm: "本当に削除しますか?"} %>
            </tr>
        <% end %>
    </tbody>
</table>

<p><%= link_to "スケジュール新規登録", :new_user %></p>

<% content_for :footer do %>
    スケジュールの合計：<%= User.count %>
<% end %>